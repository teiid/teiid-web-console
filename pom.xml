            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    <url>${site.url}</url>
    <developers>
        <developer>
            <name>Steve Hawkins</name>
            <id>steve</id>
            <email>shawkins@redhat.com</email>
            <organization>Red Hat</organization>
            <roles>
                <role>Project Lead</role>
